<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set màu nền-->
    <solid
        android:color="#FFFFFF" >
    </solid>

    <!-- đặt thuộc tính màu và độ rộng của đường viền -->
    <stroke
        android:width="@dimen/_1sdp"
        android:color="#0222EC" >
    </stroke>

    <!-- các thuộc tính căn chỉnh-->
    <padding
        android:left="@dimen/_30sdp"
        android:top="@dimen/_5sdp"
        android:right="@dimen/_30sdp"
        android:bottom="@dimen/_5sdp" >
    </padding>

    <!-- và đây là bán kính đường tròn ở 4 góc -->
    <corners
        android:radius="@dimen/_10sdp" >
    </corners>

</shape>